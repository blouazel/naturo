<h1>Edit an  article</h1>

<%= simple_form_for @article do |f| %>
  <%= f.input :title %>
  <%= f.input :subcategory, collection: Subcategory.all, label: "Sous-catégorie", include_blank: false %>
  <%= f.input :photo, as: :file, label: "image" %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :rich_body, as: :rich_text_area, label: "Texte" %>
  <%= f.button :submit %>
<% end %>

<!-- bouton back -->
<%= link_to 'Retour', articles_path %>

<!-- affiche un message si erreur présente -->
<% if @article.errors.any? %>
   <h2>Les erreurs suivantes ont empêché la sauvegarde de l'article :</h2>
   <ul>
      <% @article.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
   </ul>
<% end %>
