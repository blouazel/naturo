<h1>Create an article</h1>

<%= form_for @article do |f| %>

    <%= f.label :title, "Titre" %>
    <%= f.text_field :title %>



    <%= f.label :photo, "Image" %>
    <%= f.file_field :photo %>


  <!--<p>
    <%= f.label :category, "Choisir la catégorie :"  %>
    <%= f.select :category, ["Santé", "Recettes", "Bien-être", "Santé au féminin", "Parentalité", "Lifestyle"] %>
  </p>

  <p>
    <%= f.label :subcategory, "Choisir la sous-catégorie :"  %>
    <%= f.select :subcategory, Subcategory.all.collect {|c| [c.name, c.id]}, :multiple => "multiple" %>
  </p>-->

  <!-- fomulaire avec cat et sub imbriquées (mauvais affichage en production) :-->

    <%= f.label :subcategory_id, "Choisir la sous-catégorie :" %>
    <%= f.grouped_collection_select :subcategory_id, Category.all, :subcategories, :name, :id, :name, { id: 'subcategory-select'} %>


  <!--<p>
    <%= f.label :reading_time, "Temps de lecture" %>
    <%= f.text_field :reading_time %>
  </p>-->


    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>



    <%= f.label :rich_body, "Texte" %><br>
    <%= f.rich_text_area :rich_body %>



    <%= f.submit "Créer l'article", class: 'btn btn-primary' %>

<% end %>
  <!-- bouton back -->
  <%= link_to 'Retour', articles_path %>

<!-- affiche un message si erreur présente -->
<% if @article.errors.any? %>
   <h2>Les erreurs suivantes ont empêché la sauvegarde de l'article :</h2>
   <ul>
      <% @article.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
   </ul>
<% end %>
