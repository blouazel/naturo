<% @article.each do |article| %>
  <div class="card-article">
     <%= cl_image_tag article.photo.key, width: 500 %>
     <div class="card-article-infos">
        <div>
          <h2><%= article.title %></h2>
        </div>
        <div>
          <p><%= article.description %></p>
        </div>
        <div class="links">
          <% if policy(article).edit? %>
          <%= link_to 'Mettre à jour', edit_article_path(article), class: "btn btn-ghost" %>
          <% end %>
          <% if policy(article).destroy? %>
           <%= link_to 'Supprimer', article_path(article), method: :delete, data: {confirm: "Êtes-vous sûr ?"}, class: "btn btn-ghost" %>
          <% end %>
          <%= link_to 'Lire', article_path(article), class: "btn btn-ghost" %>
        </div>
     </div>
  </div>
<% end %>


<% if policy(Article.new).create? %>
  <%= link_to 'Nouvel article', new_article_path, class: "btn btn-ghost" %>
<% end %>
