<h1>Edit a category</h1>

<%= form_for @category do |f| %>
  <p>
    <%= f.label :name, "Nom" %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%#= f.label :ancestry %><br />
    <%#= f.collection_select :ancestry, Category.all(:order => "title"), :id, :title, :include_blank => true %>
  </p>

  <p>
    <%= f.submit "Modifier la catégorie", class: 'btn btn-primary' %>
  </p>
<% end %>
  <!-- bouton back -->
  <%= link_to 'Retour', categories_path %>

<!-- affiche un message si erreur présente -->
<% if @category.errors.any? %>
   <h2>Les erreurs suivantes ont empêché la sauvegarde de la nouvelle catégorie :</h2>
   <ul>
      <% @category.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
      <% end %>
   </ul>
<% end %>
